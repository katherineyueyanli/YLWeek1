<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimesActivity">

    <Button
        android:id="@+id/bttFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Primes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bttTerminate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttTerminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminate Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bttFind"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/bttFind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/latest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/bttTerminate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checking"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Checking Number"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/checking"
        app:layout_constraintEnd_toEndOf="@+id/checking"
        app:layout_constraintStart_toStartOf="@+id/checking" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="170dp"
        android:layout_height="26dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Latest Prime"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/checking"
        app:layout_constraintEnd_toEndOf="@+id/latest"
        app:layout_constraintStart_toStartOf="@+id/latest" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pacifier Switch"
        app:layout_constraintEnd_toEndOf="@+id/bttTerminate"
        app:layout_constraintStart_toStartOf="@+id/bttFind"
        app:layout_constraintTop_toBottomOf="@+id/bttTerminate" />
</androidx.constraintlayout.widget.ConstraintLayout>